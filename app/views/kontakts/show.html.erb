    <h1 class="text-uppercase text-white">Detaljerad Information</h1>
  </div>
</header>
<section class='text-center bg-dark'>
  <div class="container justify: content-center bg-dark text-white">
    <h1 class="display-4">
      <%= @kontakt.förnamn %> <%= @kontakt.efternamn %>
    </h1>
    <p class="lead"><%= @kontakt.title %></p>
    <hr class='my-4'>
    <p>Mobilnummer: <%= @kontakt.mobilnummer %></p>
