  </div>
  <%= link_to "Redigera kontaktuppgifter", edit_kontakt_path(@kontakt), class:"btn btn-outline-primary"%>
  <%= link_to "Gå till kontaktlistan", kontakts_path, class:"btn btn-outline-primary"%>
  <hr>
  <%= button_to "Ta bort denna kontakt", @kontakt, method: :delete,class:'btn btn-danger' %>
  <br>
</div>
